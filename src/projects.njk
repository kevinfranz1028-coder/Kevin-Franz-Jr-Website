---
layout: base.njk
title: {{ pages.projects.title }}
description: Personal projects and interests of Kevin Franz Jr. - meteorology, leadership, and what drives him beyond basketball.
permalink: /projects/
---

<section class="section-page-header">
    <div class="container">
        <div class="page-header-centered">
            <span class="label-eyebrow">{{ pages.projects.title }}</span>
            <h1>{{ pages.projects.heading }}</h1>
            <p class="hero-subheadline">{{ pages.projects.subheadline }}</p>
        </div>
    </div>
</section>

<section class="section-content">
    <div class="container">
        {% for category in pages.projects.categories %}
        <h2>{{ category.title }}</h2>
        {% if category.description %}
        <div>{{ category.description | safe }}</div>
        {% endif %}

        {% if category.projects and category.projects.length > 0 %}
        <div class="tiles-grid">
            {% for project in category.projects %}
            <div class="tile-card">
                <h3 class="tile-title">{{ project.title }}</h3>
                <p class="tile-body">{{ project.description }}</p>
                {% if project.link %}
                <a href="{{ project.link }}" class="tile-cta" target="_blank">Learn More â†’</a>
                {% endif %}
            </div>
            {% endfor %}
        </div>
        {% endif %}
        {% endfor %}
    </div>
</section>
