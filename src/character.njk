---
layout: base.njk
title: {{ pages.character.title }}
description: Community involvement, leadership, and core values of Kevin Franz Jr., Class of 2028 student-athlete.
permalink: /character/
---

<section class="section-page-header">
    <div class="container">
        <div class="page-header-centered">
            <span class="label-eyebrow">{{ pages.character.title }}</span>
            <h1>{{ pages.character.heading }}</h1>
            <p class="hero-subheadline">{{ pages.character.subheadline }}</p>
        </div>
    </div>
</section>

<section class="section-content">
    <div class="container">
        {% if pages.character.values.length > 0 %}
        <h2>Core Values</h2>
        <div class="glance-grid">
            {% for value in pages.character.values %}
            <div class="card-glance">
                <h3 class="card-title">{{ value.title }}</h3>
                <p>{{ value.description }}</p>
            </div>
            {% endfor %}
        </div>
        {% endif %}

        {% if pages.character.service.length > 0 %}
        <h2>Community Involvement</h2>
        <div class="content-section">
            {% for activity in pages.character.service %}
            <h3>{{ activity.title }}</h3>
            <p>{{ activity.description }}</p>
            {% endfor %}
        </div>
        {% endif %}

        {% if pages.character.leadership.length > 0 %}
        <h2>Leadership</h2>
        <ul>
            {% for role in pages.character.leadership %}
            <li>{{ role }}</li>
            {% endfor %}
        </ul>
        {% endif %}

        {% if pages.character.testimonial %}
        <div class="quote-section" style="margin-top: 3rem;">
            <div class="quote-card">
                <p class="quote-text">"{{ pages.character.testimonial.quote }}"</p>
                <p class="quote-attribution">{{ pages.character.testimonial.attribution }}</p>
            </div>
        </div>
        {% endif %}
    </div>
</section>
