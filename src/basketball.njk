---
layout: base.njk
title: {{ (sanityPages.basketball or pages.basketball).title }}
description: Complete basketball profile for Kevin Franz Jr. - stats, highlights, schedule, and recruiting information for Class of 2028 guard.
permalink: /basketball/
---

{# Page Header #}
<section class="section-basketball-hero">
    <div class="container">
        <div class="page-header-centered">
            <span class="label-eyebrow">{{ (sanityPages.basketball or pages.basketball).header.eyebrow }}</span>
            <h1>{{ (sanityPages.basketball or pages.basketball).header.heading }}</h1>
            <p class="hero-subheadline">{{ (sanityPages.basketball or pages.basketball).header.subheading }}</p>
            <p class="supporting-text">{{ (sanityPages.basketball or pages.basketball).header.supportingText }}</p>
        </div>
    </div>
</section>

{# Player Information #}
<section class="section-measurables">
    <div class="container">
        <div class="measurables-grid">
            <div class="measurables-text">
                <h2>Player Information</h2>
                <div class="info-list">
                    <div class="info-item"><strong>Name:</strong> {{ (sanityPages.basketball or pages.basketball).playerInfo.name }}</div>
                    <div class="info-item"><strong>Class:</strong> {{ (sanityPages.basketball or pages.basketball).playerInfo.class }}</div>
                    <div class="info-item"><strong>Position:</strong> {{ (sanityPages.basketball or pages.basketball).playerInfo.position }}</div>
                    <div class="info-item"><strong>Height / Weight:</strong> {{ (sanityPages.basketball or pages.basketball).playerInfo.height }} / {{ (sanityPages.basketball or pages.basketball).playerInfo.weight }}</div>
                    <div class="info-item"><strong>Dominant Hand:</strong> {{ (sanityPages.basketball or pages.basketball).playerInfo.hand }}</div>
                    <div class="info-item"><strong>School:</strong> {{ (sanityPages.basketball or pages.basketball).playerInfo.school }}</div>
                    <div class="info-item"><strong>Jersey:</strong> #{{ (sanityPages.basketball or pages.basketball).playerInfo.jersey }} (Varsity)</div>
                    <div class="info-item"><strong>AAU / Club:</strong> {{ (sanityPages.basketball or pages.basketball).playerInfo.aauTeam }}</div>
                </div>
            </div>
            <div class="measurables-image-wrapper">
                <img src="{{ (sanityPages.basketball or pages.basketball).playerInfo.image }}" alt="{{ (sanityPages.basketball or pages.basketball).playerInfo.name }} basketball action shot" class="measurables-image">
            </div>
        </div>
    </div>
</section>

{# Highlights #}
<section class="section-highlights">
    <div class="container">
        <h2>Highlights</h2>
        <p class="subtitle">Recent highlight clips and full game film.</p>
        <div class="highlights-videos">
            {% if (sanityPages.basketball or pages.basketball).highlights and (sanityPages.basketball or pages.basketball).highlights.length > 0 %}
                {% for video in (sanityPages.basketball or pages.basketball).highlights %}
                <div class="video-wrapper">
                    <div class="video-embed">
                        {% if video.embedCode %}
                            {{ video.embedCode | safe }}
                        {% elif video.videoUrl %}
                            {% if 'youtube.com' in video.videoUrl or 'youtu.be' in video.videoUrl %}
                                {% set videoId = video.videoUrl | replace('https://youtu.be/', '') | replace('https://www.youtube.com/watch?v=', '') | replace('&', '?') | split('?') | first %}
                                <iframe width="100%" height="315" src="https://www.youtube.com/embed/{{ videoId }}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                            {% else %}
                                <div class="video-placeholder">
                                    <p><a href="{{ video.videoUrl }}" target="_blank">Watch Video</a></p>
                                </div>
                            {% endif %}
                        {% else %}
                            <div class="video-placeholder">
                                <p>Video Coming Soon</p>
                            </div>
                        {% endif %}
                    </div>
                    <div class="video-caption">
                        <h3 class="video-title">{{ video.title }}</h3>
                        <p>{{ video.description }}</p>
                    </div>
                </div>
                {% endfor %}
            {% else %}
                <p>Highlight videos coming soon! Check back for updated footage.</p>
            {% endif %}
        </div>
    </div>
</section>

{# Basketball Timeline - Modern Horizontal Style #}
<section class="timeline-horizontal">
    <link rel="stylesheet" href="/css/timeline.css">

    <div class="timeline-horizontal-wrapper">
        {# Timeline Header #}
        <div class="timeline-header">
            <h2>Basketball Journey</h2>
            <p>Follow Kevin's basketball development through the years</p>
        </div>

        {# Photo Cards - Each Clickable #}
        <div class="timeline-cards">
            {% for item in collections.timeline %}
            <a href="{{ item.url }}" class="timeline-photo-card">
                <div class="timeline-card-border">
                    {# Photo #}
                    {% if item.data.gallery and item.data.gallery[0] and item.data.gallery[0].image %}
                    <img src="{{ item.data.gallery[0].image }}" alt="{{ item.data.year }} - {{ item.data.grade }}" class="timeline-card-image">
                    {% else %}
                    <img src="/images/placeholder-basketball.jpg" alt="{{ item.data.year }} - {{ item.data.grade }}" class="timeline-card-image">
                    {% endif %}

                    {# Overlay with Info #}
                    <div class="timeline-card-overlay">
                        <div class="timeline-card-year-large">{{ item.data.year }}</div>
                        <div class="timeline-card-title">{{ item.data.grade }}</div>
                        <div class="timeline-card-description">{{ item.data.summary }}</div>

                        {# Optional Stats #}
                        {% if item.data.stats %}
                        <div class="timeline-stats-badge">
                            {% if item.data.stats.ppg %}
                            <div class="timeline-stat-item">
                                <span class="timeline-stat-value">{{ item.data.stats.ppg }}</span>
                                <span class="timeline-stat-label">PPG</span>
                            </div>
                            {% endif %}
                            {% if item.data.stats.apg %}
                            <div class="timeline-stat-item">
                                <span class="timeline-stat-value">{{ item.data.stats.apg }}</span>
                                <span class="timeline-stat-label">APG</span>
                            </div>
                            {% endif %}
                            {% if item.data.stats.rpg %}
                            <div class="timeline-stat-item">
                                <span class="timeline-stat-value">{{ item.data.stats.rpg }}</span>
                                <span class="timeline-stat-label">RPG</span>
                            </div>
                            {% endif %}
                        </div>
                        {% endif %}
                    </div>

                    {# Badge for Current Season #}
                    {% if item.data.year == "2024-2025" %}
                    <div class="timeline-card-badge">Current</div>
                    {% endif %}
                </div>

                {# Year Marker Circle #}
                <div class="timeline-card-year-marker">{{ item.data.year }}</div>
            </a>
            {% endfor %}
        </div>

        {# Timeline Rail #}
        <div class="timeline-rail"></div>

        {# Year Markers Below #}
        <div class="timeline-years">
            {% for item in collections.timeline %}
            <div class="timeline-year-marker">{{ item.data.year }}</div>
            {% endfor %}
        </div>
    </div>
</section>

{# Season Stats #}
<section class="section-stats">
    <div class="container">
        <h2>Season Stats</h2>
        {% if (sanityPages.basketball or pages.basketball).stats.intro %}
        <p class="intro-text">{{ (sanityPages.basketball or pages.basketball).stats.intro }}</p>
        {% endif %}

        {% if (sanityPages.basketball or pages.basketball).stats.table and (sanityPages.basketball or pages.basketball).stats.table.length > 0 %}
        <div class="table-wrapper">
            <table class="stats-table">
                <thead>
                    <tr>
                        <th>Season</th>
                        <th>Team</th>
                        <th>GP</th>
                        <th>MPG</th>
                        <th>PPG</th>
                        <th>RPG</th>
                        <th>APG</th>
                        <th>SPG</th>
                        <th>3P%</th>
                        <th>FT%</th>
                    </tr>
                </thead>
                <tbody>
                    {% for row in (sanityPages.basketball or pages.basketball).stats.table %}
                    <tr>
                        <td>{{ row.season }}</td>
                        <td>{{ row.team }}</td>
                        <td>{{ row.gp }}</td>
                        <td>{{ row.mpg }}</td>
                        <td>{{ row.ppg }}</td>
                        <td>{{ row.rpg }}</td>
                        <td>{{ row.apg }}</td>
                        <td>{{ row.spg }}</td>
                        <td>{{ row.threePct }}</td>
                        <td>{{ row.ftPct }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% endif %}
    </div>
</section>

{# Schedule #}
<section class="section-schedule">
    <div class="container">
        <h2>Current Season Schedule</h2>
        <div class="schedule-wrapper">
            <div class="schedule-header">
                <div class="schedule-col">Date</div>
                <div class="schedule-col">Opponent</div>
                <div class="schedule-col">Location</div>
                <div class="schedule-col">Time</div>
                <div class="schedule-col">Result</div>
            </div>
            {% set currentGames = sanityGames %}
            {% for game in currentGames %}
            <div class="schedule-row">
                <div class="schedule-col">{{ game.date | shortDate }}</div>
                <div class="schedule-col">{{ game.data.opponent }}</div>
                <div class="schedule-col">{{ game.data.location }}</div>
                <div class="schedule-col">{{ game.data.time }}</div>
                <div class="schedule-col">{{ game.data.result or '–' }}</div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

{# Achievements #}
<section class="section-achievements">
    <div class="container">
        <h2>Achievements & Recognition</h2>
        <div class="achievements-grid">
            <div class="achievements-list">
                <h3>Honors & Awards</h3>
                {% if (sanityPages.basketball or pages.basketball).achievements.list and (sanityPages.basketball or pages.basketball).achievements.list.length > 0 %}
                <ul>
                    {% for achievement in (sanityPages.basketball or pages.basketball).achievements.list %}
                    <li>{{ achievement }}</li>
                    {% endfor %}
                </ul>
                {% else %}
                <p>Achievements coming soon!</p>
                {% endif %}
            </div>
            <div class="quote-section">
                {% if (sanityPages.basketball or pages.basketball).achievements.quote %}
                <div class="quote-card">
                    <p class="quote-text">"{{ (sanityPages.basketball or pages.basketball).achievements.quote.text }}"</p>
                    <p class="quote-attribution">{{ (sanityPages.basketball or pages.basketball).achievements.quote.attribution }}</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>

{# Training & Development #}
<section class="section-training">
    <div class="container">
        <h2>Training & Development</h2>
        <div class="training-content">
            {% if (sanityPages.basketball or pages.basketball).training.focusAreas %}
            <h3>Off-Season Focus Areas</h3>
            <div>{{ (sanityPages.basketball or pages.basketball).training.focusAreas | replace('\n', '<br>') | safe }}</div>
            {% endif %}

            {% if (sanityPages.basketball or pages.basketball).training.routine %}
            <h3>Training Routine</h3>
            <div>{{ (sanityPages.basketball or pages.basketball).training.routine | replace('\n', '<br>') | safe }}</div>
            {% endif %}

            {% if (sanityPages.basketball or pages.basketball).training.statement %}
            <p style="margin-top: 2rem;">{{ (sanityPages.basketball or pages.basketball).training.statement }}</p>
            {% endif %}
        </div>
    </div>
</section>

{# Recruiting Profiles #}
<section style="padding: 4rem 0; background-color: var(--bg-white);">
    <div class="container">
        <h2>{{ (sanityPages.basketball or pages.basketball).recruitingProfiles.heading }}</h2>
        <p class="subtitle">{{ (sanityPages.basketball or pages.basketball).recruitingProfiles.description }}</p>
        <div class="glance-grid" style="margin-top: 2rem;">
            {% for profile in (sanityPages.basketball or pages.basketball).recruitingProfiles.profiles %}
            <div class="card-glance">
                <h3 class="card-title">{{ profile.name }}</h3>
                <p class="card-body">{{ profile.description }}</p>
                <a href="{{ profile.url }}" target="_blank" rel="noopener noreferrer" class="btn-secondary" style="margin-top: 1rem;">View Profile →</a>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

{# Social Media #}
<section style="padding: 4rem 0; background-color: var(--bg-light);">
    <div class="container">
        <h2 class="text-center">{{ (sanityPages.basketball or pages.basketball).socialMedia.heading }}</h2>
        <p class="subtitle text-center">{{ (sanityPages.basketball or pages.basketball).socialMedia.description }}</p>
        <div style="display: flex; flex-wrap: wrap; gap: 2rem; justify-content: center; margin-top: 2rem;">
            {% for link in (sanityPages.basketball or pages.basketball).socialMedia.links %}
            <div style="background: var(--bg-white); padding: 2rem; border-radius: 0.5rem; box-shadow: var(--shadow-sm); min-width: 250px; text-align: center;">
                <h3 style="color: var(--primary-color); margin-bottom: 0.5rem;">{{ link.platform }}</h3>
                <a href="{{ link.url }}" target="_blank" rel="noopener noreferrer" style="font-size: 1.25rem; font-weight: 600;">{{ link.handle }}</a>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

{# Contact & References #}
<section class="section-coach-contact">
    <div class="container">
        <div class="contact-card">
            <h2>Contact & References</h2>
            <div class="contact-content">
                {% if (sanityPages.basketball or pages.basketball).contacts and (sanityPages.basketball or pages.basketball).contacts.length > 0 %}
                    {% for contact in (sanityPages.basketball or pages.basketball).contacts %}
                    <div class="contact-block">
                        <h4>{{ contact.role }}</h4>
                        <p>{{ contact.name }}
                        {% if contact.email %} – <a href="mailto:{{ contact.email }}">{{ contact.email }}</a>{% endif %}
                        {% if contact.phone %} – {{ contact.phone }}{% endif %}
                        </p>
                    </div>
                    {% endfor %}
                {% else %}
                <div class="contact-block">
                    <h4>Family Contact</h4>
                    <p>For recruiting or academic questions, please reach out:</p>
                    <p><a href="mailto:{{ player.parentEmail }}">{{ player.parentEmail }}</a>{% if player.parentPhone %} · {{ player.parentPhone }}{% endif %}</p>
                </div>
                {% endif %}

                <div class="contact-cta">
                    <a href="mailto:{{ player.parentEmail }}?subject=Recruiting Inquiry – {{ player.name }}" class="btn-primary">Email About Recruiting</a>
                </div>
            </div>
        </div>
    </div>
</section>
