---
layout: base.njk
title: {{ pages.basketball.title }}
description: Complete basketball profile for Kevin Franz Jr. - stats, highlights, schedule, and recruiting information for Class of 2028 guard.
permalink: /basketball/
---

{# Page Header #}
<section class="section-basketball-hero">
    <div class="container">
        <div class="page-header-centered">
            <span class="label-eyebrow">{{ pages.basketball.header.eyebrow }}</span>
            <h1>{{ pages.basketball.header.heading }}</h1>
            <p class="hero-subheadline">{{ pages.basketball.header.subheading }}</p>
            <p class="supporting-text">{{ pages.basketball.header.supportingText }}</p>
        </div>
    </div>
</section>

{# Player Information #}
<section class="section-measurables">
    <div class="container">
        <div class="measurables-grid">
            <div class="measurables-text">
                <h2>Player Information</h2>
                <div class="info-list">
                    <div class="info-item"><strong>Name:</strong> {{ pages.basketball.playerInfo.name }}</div>
                    <div class="info-item"><strong>Class:</strong> {{ pages.basketball.playerInfo.class }}</div>
                    <div class="info-item"><strong>Position:</strong> {{ pages.basketball.playerInfo.position }}</div>
                    <div class="info-item"><strong>Height / Weight:</strong> {{ pages.basketball.playerInfo.height }} / {{ pages.basketball.playerInfo.weight }}</div>
                    <div class="info-item"><strong>Dominant Hand:</strong> {{ pages.basketball.playerInfo.hand }}</div>
                    <div class="info-item"><strong>School:</strong> {{ pages.basketball.playerInfo.school }}</div>
                    <div class="info-item"><strong>Jersey:</strong> #{{ pages.basketball.playerInfo.jersey }} (Varsity)</div>
                    <div class="info-item"><strong>AAU / Club:</strong> {{ pages.basketball.playerInfo.aauTeam }}</div>
                </div>
            </div>
            <div class="measurables-image-wrapper">
                <img src="{{ pages.basketball.playerInfo.image }}" alt="{{ pages.basketball.playerInfo.name }} basketball action shot" class="measurables-image">
            </div>
        </div>
    </div>
</section>

{# Highlights #}
<section class="section-highlights">
    <div class="container">
        <h2>Highlights</h2>
        <p class="subtitle">Recent highlight clips and full game film.</p>
        <div class="highlights-videos">
            {% if pages.basketball.highlights and pages.basketball.highlights.length > 0 %}
                {% for video in pages.basketball.highlights %}
                <div class="video-wrapper">
                    <div class="video-embed">
                        {% if video.embedCode %}
                            {{ video.embedCode | safe }}
                        {% elif video.videoUrl %}
                            {% if 'youtube.com' in video.videoUrl or 'youtu.be' in video.videoUrl %}
                                {% set videoId = video.videoUrl | replace('https://youtu.be/', '') | replace('https://www.youtube.com/watch?v=', '') | replace('&', '?') | split('?') | first %}
                                <iframe width="100%" height="315" src="https://www.youtube.com/embed/{{ videoId }}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                            {% else %}
                                <div class="video-placeholder">
                                    <p><a href="{{ video.videoUrl }}" target="_blank">Watch Video</a></p>
                                </div>
                            {% endif %}
                        {% else %}
                            <div class="video-placeholder">
                                <p>Video Coming Soon</p>
                            </div>
                        {% endif %}
                    </div>
                    <div class="video-caption">
                        <h3 class="video-title">{{ video.title }}</h3>
                        <p>{{ video.description }}</p>
                    </div>
                </div>
                {% endfor %}
            {% else %}
                <p>Highlight videos coming soon! Check back for updated footage.</p>
            {% endif %}
        </div>
    </div>
</section>

{# Season Stats #}
<section class="section-stats">
    <div class="container">
        <h2>Season Stats</h2>
        {% if pages.basketball.stats.intro %}
        <p class="intro-text">{{ pages.basketball.stats.intro }}</p>
        {% endif %}

        {% if pages.basketball.stats.table and pages.basketball.stats.table.length > 0 %}
        <div class="table-wrapper">
            <table class="stats-table">
                <thead>
                    <tr>
                        <th>Season</th>
                        <th>Team</th>
                        <th>GP</th>
                        <th>MPG</th>
                        <th>PPG</th>
                        <th>RPG</th>
                        <th>APG</th>
                        <th>SPG</th>
                        <th>3P%</th>
                        <th>FT%</th>
                    </tr>
                </thead>
                <tbody>
                    {% for row in pages.basketball.stats.table %}
                    <tr>
                        <td>{{ row.season }}</td>
                        <td>{{ row.team }}</td>
                        <td>{{ row.gp }}</td>
                        <td>{{ row.mpg }}</td>
                        <td>{{ row.ppg }}</td>
                        <td>{{ row.rpg }}</td>
                        <td>{{ row.apg }}</td>
                        <td>{{ row.spg }}</td>
                        <td>{{ row.threePct }}</td>
                        <td>{{ row.ftPct }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% endif %}
    </div>
</section>

{# Schedule #}
<section class="section-schedule">
    <div class="container">
        <h2>Current Season Schedule</h2>
        <div class="schedule-wrapper">
            <div class="schedule-header">
                <div class="schedule-col">Date</div>
                <div class="schedule-col">Opponent</div>
                <div class="schedule-col">Location</div>
                <div class="schedule-col">Time</div>
                <div class="schedule-col">Result</div>
            </div>
            {% set currentGames = collections.games %}
            {% for game in currentGames %}
            <div class="schedule-row">
                <div class="schedule-col">{{ game.date | shortDate }}</div>
                <div class="schedule-col">{{ game.data.opponent }}</div>
                <div class="schedule-col">{{ game.data.location }}</div>
                <div class="schedule-col">{{ game.data.time }}</div>
                <div class="schedule-col">{{ game.data.result or '–' }}</div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

{# Achievements #}
<section class="section-achievements">
    <div class="container">
        <h2>Achievements & Recognition</h2>
        <div class="achievements-grid">
            <div class="achievements-list">
                <h3>Honors & Awards</h3>
                {% if pages.basketball.achievements.list and pages.basketball.achievements.list.length > 0 %}
                <ul>
                    {% for achievement in pages.basketball.achievements.list %}
                    <li>{{ achievement }}</li>
                    {% endfor %}
                </ul>
                {% else %}
                <p>Achievements coming soon!</p>
                {% endif %}
            </div>
            <div class="quote-section">
                {% if pages.basketball.achievements.quote %}
                <div class="quote-card">
                    <p class="quote-text">"{{ pages.basketball.achievements.quote.text }}"</p>
                    <p class="quote-attribution">{{ pages.basketball.achievements.quote.attribution }}</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>

{# Training & Development #}
<section class="section-training">
    <div class="container">
        <h2>Training & Development</h2>
        <div class="training-content">
            {% if pages.basketball.training.focusAreas %}
            <h3>Off-Season Focus Areas</h3>
            <div>{{ pages.basketball.training.focusAreas | replace('\n', '<br>') | safe }}</div>
            {% endif %}

            {% if pages.basketball.training.routine %}
            <h3>Training Routine</h3>
            <div>{{ pages.basketball.training.routine | replace('\n', '<br>') | safe }}</div>
            {% endif %}

            {% if pages.basketball.training.statement %}
            <p style="margin-top: 2rem;">{{ pages.basketball.training.statement }}</p>
            {% endif %}
        </div>
    </div>
</section>

{# Contact & References #}
<section class="section-coach-contact">
    <div class="container">
        <div class="contact-card">
            <h2>Contact & References</h2>
            <div class="contact-content">
                {% if pages.basketball.contacts and pages.basketball.contacts.length > 0 %}
                    {% for contact in pages.basketball.contacts %}
                    <div class="contact-block">
                        <h4>{{ contact.role }}</h4>
                        <p>{{ contact.name }}
                        {% if contact.email %} – <a href="mailto:{{ contact.email }}">{{ contact.email }}</a>{% endif %}
                        {% if contact.phone %} – {{ contact.phone }}{% endif %}
                        </p>
                    </div>
                    {% endfor %}
                {% else %}
                <div class="contact-block">
                    <h4>Family Contact</h4>
                    <p>For recruiting or academic questions, please reach out:</p>
                    <p><a href="mailto:{{ player.parentEmail }}">{{ player.parentEmail }}</a>{% if player.parentPhone %} · {{ player.parentPhone }}{% endif %}</p>
                </div>
                {% endif %}

                <div class="contact-cta">
                    <a href="mailto:{{ player.parentEmail }}?subject=Recruiting Inquiry – {{ player.name }}" class="btn-primary">Email About Recruiting</a>
                </div>
            </div>
        </div>
    </div>
</section>
