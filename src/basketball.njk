---
layout: base.njk
title: {{ pages.basketball.title }}
description: Complete basketball profile for Kevin Franz Jr. - stats, highlights, schedule, and recruiting information for Class of 2028 guard.
permalink: /basketball/
---

{# Cinematic Banner #}
{% set photos = pages.basketball.bannerPhotos %}
<section class="bball-banner">
    <div class="bball-banner-photos">
        {% if photos and photos.length > 0 %}
            {% for i in range(0, 6) %}
            <div class="bball-banner-photo bball-bp-{{ i + 1 }}"><img src="{{ photos[i % photos.length] }}" alt=""></div>
            {% endfor %}
        {% endif %}
    </div>
    <div class="bball-banner-overlay"></div>
    <div class="bball-banner-content">
        <span class="bball-banner-eyebrow">{{ pages.basketball.header.eyebrow }}</span>
        <h1 class="bball-banner-title">{{ pages.basketball.bannerTitle or 'Ball Is Life' }}</h1>
        <p class="bball-banner-sub">{{ pages.basketball.header.subheading }}</p>
    </div>
</section>

{# Player Card Section #}
<section class="bball-card-section">
    <div class="container">
        <div class="bball-card-wrapper">
            {# Card Front — Player Photo #}
            <div class="bball-card bball-card-front">
                <div class="bball-card-border">
                    <div class="bball-card-team-bar">
                        <span>{{ pages.basketball.playerInfo.school }}</span>
                        <span>#{{ pages.basketball.playerInfo.jersey }}</span>
                    </div>
                    <div class="bball-card-photo">
                        <img src="{{ pages.basketball.playerInfo.image }}" alt="{{ pages.basketball.playerInfo.name }}">
                    </div>
                    <div class="bball-card-nameplate">
                        <h1 class="bball-card-name">{{ pages.basketball.playerInfo.name }}</h1>
                        <span class="bball-card-pos">{{ pages.basketball.playerInfo.position }}</span>
                    </div>
                    <div class="bball-card-quick-stats">
                        <div class="bball-card-qstat">
                            <span class="bball-card-qstat-val">{{ pages.basketball.playerInfo.height }}</span>
                            <span class="bball-card-qstat-lbl">Height</span>
                        </div>
                        <div class="bball-card-qstat">
                            <span class="bball-card-qstat-val">{{ pages.basketball.playerInfo.weight }}</span>
                            <span class="bball-card-qstat-lbl">Weight</span>
                        </div>
                        <div class="bball-card-qstat">
                            <span class="bball-card-qstat-val">{{ pages.basketball.playerInfo.class }}</span>
                            <span class="bball-card-qstat-lbl">Class</span>
                        </div>
                    </div>
                </div>
            </div>

            {# Card Back — Player Info #}
            <div class="bball-card bball-card-back">
                <div class="bball-card-border">
                    <div class="bball-card-team-bar">
                        <span>Player Profile</span>
                        <span>{{ pages.basketball.header.eyebrow }}</span>
                    </div>
                    <div class="bball-card-back-content">
                        <p class="bball-card-scouting">{{ pages.basketball.header.heading }}</p>
                        <div class="bball-card-info-grid">
                            <div class="bball-card-info-row">
                                <span class="bball-card-info-label">Name</span>
                                <span class="bball-card-info-value">{{ pages.basketball.playerInfo.name }}</span>
                            </div>
                            <div class="bball-card-info-row">
                                <span class="bball-card-info-label">Position</span>
                                <span class="bball-card-info-value">{{ pages.basketball.playerInfo.position }}</span>
                            </div>
                            <div class="bball-card-info-row">
                                <span class="bball-card-info-label">Height / Weight</span>
                                <span class="bball-card-info-value">{{ pages.basketball.playerInfo.height }} / {{ pages.basketball.playerInfo.weight }}</span>
                            </div>
                            <div class="bball-card-info-row">
                                <span class="bball-card-info-label">Dominant Hand</span>
                                <span class="bball-card-info-value">{{ pages.basketball.playerInfo.hand }}</span>
                            </div>
                            <div class="bball-card-info-row">
                                <span class="bball-card-info-label">School</span>
                                <span class="bball-card-info-value">{{ pages.basketball.playerInfo.school }}</span>
                            </div>
                            <div class="bball-card-info-row">
                                <span class="bball-card-info-label">Jersey</span>
                                <span class="bball-card-info-value">#{{ pages.basketball.playerInfo.jersey }} (Varsity)</span>
                            </div>
                            <div class="bball-card-info-row">
                                <span class="bball-card-info-label">AAU / Club</span>
                                <span class="bball-card-info-value">{{ pages.basketball.playerInfo.aauTeam }}</span>
                            </div>
                        </div>
                        {% if pages.basketball.stats.table and pages.basketball.stats.table.length > 0 %}
                        {% set row = pages.basketball.stats.table[0] %}
                        <div class="bball-card-season-line">{{ row.season }} {{ row.team }}</div>
                        <div class="bball-card-stats-row">
                            {% for stat in row.items %}
                            {% if loop.index <= 5 %}
                            <div class="bball-card-stat">
                                <span class="bball-card-stat-val">{{ stat.value }}</span>
                                <span class="bball-card-stat-lbl">{{ stat.label }}</span>
                            </div>
                            {% endif %}
                            {% endfor %}
                        </div>
                        {% endif %}
                        {% if pages.basketball.header.supportingText %}
                        <p class="bball-card-quote">"{{ pages.basketball.header.supportingText }}"</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{# Season Stats #}
<section class="section-stats">
    <div class="container">
        <h2>Season Stats</h2>

        {% if pages.basketball.stats.table and pages.basketball.stats.table.length > 0 %}
        {% for row in pages.basketball.stats.table %}
        <p class="stats-subtitle">{{ row.season }} {{ row.team }} &mdash; {{ row.gp }} GP / {{ row.gs }} GS</p>
        <div class="stats-grid">
            {% for stat in row.items %}
            <div class="stat-cube">
                <span class="stat-cube-value">{{ stat.value }}</span>
                <span class="stat-cube-label">{{ stat.label }}</span>
                <span class="stat-cube-rank">{{ stat.rank }}</span>
            </div>
            {% endfor %}
        </div>
        {% endfor %}
        {% endif %}
    </div>
</section>

{# Schedule #}
<section class="section-schedule">
    <div class="container">
        <h2>Current Season Schedule</h2>
        <div class="schedule-wrapper">
            <div class="schedule-header">
                <div class="schedule-col">Date</div>
                <div class="schedule-col">Opponent</div>
                <div class="schedule-col">Location</div>
                <div class="schedule-col">Time</div>
                <div class="schedule-col">Result</div>
            </div>
            {% for game in collections.games %}
            <div class="schedule-row">
                <div class="schedule-col">{{ game.date | shortDate }}</div>
                <div class="schedule-col">{{ game.data.opponent }}</div>
                <div class="schedule-col">{{ game.data.location }}</div>
                <div class="schedule-col">{{ game.data.time }}</div>
                <div class="schedule-col">{{ game.data.result or '–' }}</div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

{# Basketball Journey Timeline #}
<section class="timeline-horizontal">
    <link rel="stylesheet" href="/css/timeline.css">
    <div class="timeline-horizontal-wrapper">
        <div class="timeline-header">
            <h2>Basketball Journey</h2>
            <p>Follow Kevin's basketball development through the years</p>
        </div>

        <div class="timeline-cards">
            {% for item in collections.timeline %}
            <a href="{{ item.url }}" class="timeline-photo-card">
                <div class="timeline-card-border">
                    {% if item.data.gallery and item.data.gallery[0] and item.data.gallery[0].image %}
                    <img src="{{ item.data.gallery[0].image }}" alt="{{ item.data.year }} - {{ item.data.grade }}" class="timeline-card-image">
                    {% else %}
                    <div class="timeline-card-image-placeholder"></div>
                    {% endif %}

                    {# Default state: year + grade visible #}
                    <div class="timeline-card-label">
                        <div class="timeline-card-year-large">{{ item.data.year }}</div>
                        <div class="timeline-card-title">{{ item.data.grade }}</div>
                    </div>

                    {# Hover state: full info panel #}
                    <div class="timeline-card-hover">
                        <div class="timeline-card-year-large">{{ item.data.year }}</div>
                        <div class="timeline-card-title">{{ item.data.grade }}</div>
                        {% if item.data.team %}
                        <div class="timeline-card-team">{{ item.data.team }}</div>
                        {% endif %}
                        <div class="timeline-card-description">{{ item.data.summary }}</div>

                        {% if item.data.stats %}
                        <div class="timeline-stats-badge">
                            {% if item.data.stats.ppg %}
                            <div class="timeline-stat-item">
                                <span class="timeline-stat-value">{{ item.data.stats.ppg }}</span>
                                <span class="timeline-stat-label">PPG</span>
                            </div>
                            {% endif %}
                            {% if item.data.stats.apg %}
                            <div class="timeline-stat-item">
                                <span class="timeline-stat-value">{{ item.data.stats.apg }}</span>
                                <span class="timeline-stat-label">APG</span>
                            </div>
                            {% endif %}
                            {% if item.data.stats.rpg %}
                            <div class="timeline-stat-item">
                                <span class="timeline-stat-value">{{ item.data.stats.rpg }}</span>
                                <span class="timeline-stat-label">RPG</span>
                            </div>
                            {% endif %}
                        </div>
                        {% endif %}

                        <div class="timeline-card-cta">View Season Details →</div>
                    </div>

                    {% if item.data.year == "2024-2025" %}
                    <div class="timeline-card-badge">Current</div>
                    {% endif %}
                </div>

                <div class="timeline-card-year-marker">{{ item.data.year }}</div>
            </a>
            {% endfor %}
        </div>

        <div class="timeline-rail"></div>

        <div class="timeline-years">
            {% for item in collections.timeline %}
            <div class="timeline-year-marker">{{ item.data.year }}</div>
            {% endfor %}
        </div>
    </div>
</section>

{# Highlights #}
<section class="section-highlights">
    <div class="container">
        <h2>{{ pages.basketball.highlights_heading or 'Highlights' }}</h2>
        <p class="subtitle">{{ pages.basketball.highlights_description or 'Recent highlight clips and full game film.' }}</p>
        <div class="highlights-videos">
            {% if pages.basketball.highlights and pages.basketball.highlights.length > 0 %}
                {% for video in pages.basketball.highlights %}
                <div class="video-wrapper">
                    <div class="video-embed">
                        {% if video.videoUrl %}
                            {% if 'youtube.com' in video.videoUrl or 'youtu.be' in video.videoUrl %}
                                {% set videoId = video.videoUrl | replace('https://youtu.be/', '') | replace('https://www.youtube.com/watch?v=', '') | replace('&', '?') | split('?') | first %}
                                <iframe width="100%" height="315" src="https://www.youtube.com/embed/{{ videoId }}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                            {% else %}
                                <div class="video-placeholder">
                                    <p><a href="{{ video.videoUrl }}" target="_blank">Watch Video</a></p>
                                </div>
                            {% endif %}
                        {% else %}
                            <div class="video-placeholder">
                                <p>Video Coming Soon</p>
                            </div>
                        {% endif %}
                    </div>
                    <div class="video-caption">
                        <h3 class="video-title">{{ video.title }}</h3>
                        <p>{{ video.description }}</p>
                    </div>
                </div>
                {% endfor %}
            {% else %}
                <p>Highlight videos coming soon! Check back for updated footage.</p>
            {% endif %}
        </div>
    </div>
</section>

{# Achievements #}
<section class="section-achievements">
    <div class="container">
        <h2>Achievements & Recognition</h2>
        <div class="achievements-grid">
            <div class="achievements-list">
                <h3>Honors & Awards</h3>
                {% if pages.basketball.achievements.list and pages.basketball.achievements.list.length > 0 %}
                <ul>
                    {% for achievement in pages.basketball.achievements.list %}
                    <li>{{ achievement }}</li>
                    {% endfor %}
                </ul>
                {% else %}
                <p>Achievements coming soon!</p>
                {% endif %}
            </div>
            <div class="quote-section">
                {% if pages.basketball.achievements.quote %}
                <div class="quote-card">
                    <p class="quote-text">"{{ pages.basketball.achievements.quote.text }}"</p>
                    <p class="quote-attribution">{{ pages.basketball.achievements.quote.attribution }}</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>

{# Training & Development #}
<section class="section-training">
    <div class="container">
        <h2>Training & Development</h2>
        <div class="training-content">
            {% if pages.basketball.training.focusAreas %}
            <h3>Off-Season Focus Areas</h3>
            <div>{{ pages.basketball.training.focusAreas | replace('\n', '<br>') | safe }}</div>
            {% endif %}

            {% if pages.basketball.training.routine %}
            <h3>Training Routine</h3>
            <div>{{ pages.basketball.training.routine | replace('\n', '<br>') | safe }}</div>
            {% endif %}

            {% if pages.basketball.training.statement %}
            <p style="margin-top: 2rem;">{{ pages.basketball.training.statement }}</p>
            {% endif %}
        </div>
    </div>
</section>

{# Recruiting Profiles #}
<section class="recruit-profiles-section">
    <div class="container">
        <h2 class="text-center">{{ pages.basketball.recruitingProfiles.heading }}</h2>
        <p class="subtitle text-center">{{ pages.basketball.recruitingProfiles.description }}</p>
        <div class="recruit-cards">
            {% for profile in pages.basketball.recruitingProfiles.profiles %}

            {% if profile.cardImage %}
            {# Full player card image — the image IS the link #}
            <a href="{{ profile.url }}" target="_blank" rel="noopener noreferrer" class="recruit-card recruit-card-image-only recruit-card-{{ profile.name | lower | replace(' ', '-') }}">
                <img src="{{ profile.cardImage }}" alt="{{ pages.basketball.playerInfo.name }} on {{ profile.name }}" class="recruit-card-full-img">
                <div class="recruit-card-img-label">
                    <span>{{ profile.name }}</span>
                    <span class="recruit-card-img-arrow">View Profile →</span>
                </div>
            </a>

            {% elif profile.logo %}
            {# Logo card — logo + info #}
            <a href="{{ profile.url }}" target="_blank" rel="noopener noreferrer" class="recruit-card recruit-card-{{ profile.name | lower | replace(' ', '-') }}">
                <div class="recruit-card-accent"></div>
                <div class="recruit-card-body">
                    <div class="recruit-card-logo-wrap">
                        <img src="{{ profile.logo }}" alt="{{ profile.name }}" class="recruit-card-logo">
                    </div>
                    <div class="recruit-card-name" style="text-align: center;">{{ pages.basketball.playerInfo.name }}</div>
                    {% if profile.ranking %}
                    <div class="recruit-card-ranking" style="margin: 0.5rem auto;">{{ profile.ranking }}</div>
                    {% endif %}
                    {% if profile.scoutingReport %}
                    <div class="recruit-card-scouting">
                        <div class="recruit-card-scouting-label">From {{ profile.name }}:</div>
                        <p>{{ profile.scoutingReport }}</p>
                    </div>
                    {% elif profile.description %}
                    <div class="recruit-card-desc" style="text-align: center;">{{ profile.description }}</div>
                    {% endif %}
                    <div class="recruit-card-cta" style="text-align: center;">
                        View Full Profile on {{ profile.name }} →
                    </div>
                </div>
            </a>

            {% else %}
            {# Fallback — text info card #}
            <a href="{{ profile.url }}" target="_blank" rel="noopener noreferrer" class="recruit-card recruit-card-{{ profile.name | lower | replace(' ', '-') }}">
                <div class="recruit-card-accent"></div>
                <div class="recruit-card-body">
                    <div class="recruit-card-platform">{{ profile.name }}</div>
                    <div class="recruit-card-name">{{ pages.basketball.playerInfo.name }}</div>
                    <div class="recruit-card-details" style="margin-top: 0.25rem;">
                        {{ pages.basketball.playerInfo.position }} · {{ pages.basketball.playerInfo.height }} · Class of {{ pages.basketball.playerInfo.class }}
                    </div>
                    {% if profile.description %}
                    <div class="recruit-card-desc" style="margin-top: 1rem;">{{ profile.description }}</div>
                    {% endif %}
                    <div class="recruit-card-cta">
                        View Full Profile on {{ profile.name }} →
                    </div>
                </div>
            </a>
            {% endif %}

            {% endfor %}
        </div>
    </div>
</section>

{# Social Media #}
<section style="padding: 4rem 0; background-color: var(--bg-light);">
    <div class="container">
        <h2 class="text-center">{{ pages.basketball.socialMedia.heading }}</h2>
        <p class="subtitle text-center">{{ pages.basketball.socialMedia.description }}</p>
        <div style="display: flex; flex-wrap: wrap; gap: 2rem; justify-content: center; margin-top: 2rem;">
            {% for link in pages.basketball.socialMedia.links %}
            <div style="background: var(--bg-white); padding: 2rem; border-radius: 0.5rem; box-shadow: var(--shadow-sm); min-width: 250px; text-align: center;">
                <h3 style="color: var(--primary-color); margin-bottom: 0.5rem;">{{ link.platform }}</h3>
                <a href="{{ link.url }}" target="_blank" rel="noopener noreferrer" style="font-size: 1.25rem; font-weight: 600;">{{ link.handle }}</a>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

{# Contact & References #}
<section class="section-coach-contact">
    <div class="container">
        <div class="contact-card">
            <h2>Contact & References</h2>
            <div class="contact-content">
                {% if pages.basketball.contacts and pages.basketball.contacts.length > 0 %}
                    {% for contact in pages.basketball.contacts %}
                    <div class="contact-block">
                        <h4>{{ contact.role }}</h4>
                        <p>{{ contact.name }}
                        {% if contact.email %} – <a href="mailto:{{ contact.email }}">{{ contact.email }}</a>{% endif %}
                        {% if contact.phone %} – {{ contact.phone }}{% endif %}
                        </p>
                    </div>
                    {% endfor %}
                {% else %}
                <div class="contact-block">
                    <h4>Family Contact</h4>
                    <p>For recruiting or academic questions, please reach out:</p>
                    <p><a href="mailto:{{ player.parentEmail }}">{{ player.parentEmail }}</a>{% if player.parentPhone %} · {{ player.parentPhone }}{% endif %}</p>
                </div>
                {% endif %}

                <div class="contact-cta">
                    <a href="mailto:{{ player.parentEmail }}?subject=Recruiting Inquiry – {{ player.name }}" class="btn-primary">Email About Recruiting</a>
                </div>
            </div>
        </div>
    </div>
</section>
