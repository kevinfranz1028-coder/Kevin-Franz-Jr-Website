---
layout: base.njk
title: Home
description: Kevin Franz Jr. - Class of 2028 Guard & Student-Athlete working to play college basketball and study atmospheric science.
---

{# Hero Section #}
<section class="section-hero">
    <div class="container">
        <div class="hero-grid">
            <div class="hero-text">
                <span class="label-eyebrow">{{ pages.home.hero.eyebrow }}</span>
                <h1 class="hero-heading">{{ pages.home.hero.heading }}</h1>
                <p class="hero-subheadline">{{ pages.home.hero.subheading }}</p>
                <div class="hero-cta-wrapper">
                    <a href="{{ pages.home.hero.primaryButtonLink }}" class="btn-primary">{{ pages.home.hero.primaryButtonText }}</a>
                    <a href="{{ pages.home.hero.secondaryButtonLink }}" class="btn-secondary">{{ pages.home.hero.secondaryButtonText }}</a>
                </div>
            </div>
            <div class="hero-image-wrapper">
                <img src="{{ pages.home.hero.image }}" alt="{{ pages.home.hero.heading }} in action" class="hero-image">
            </div>
        </div>
    </div>
</section>

{# At a Glance Section #}
<section class="section-at-a-glance">
    <div class="container">
        <h2 class="section-heading-centered">At a Glance</h2>
        <div class="glance-grid">
            {% for card in pages.home.glanceCards %}
            <div class="card-glance">
                <h3 class="card-title">{{ card.title }}</h3>
                <div class="card-body">
                    {{ card.body | safe | replace('\n', '<br>') }}
                </div>
                <a href="{{ card.linkUrl }}" class="card-link">{{ card.linkText }}</a>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

{# About Kevin Section #}
<section class="section-about">
    <div class="container">
        <div class="about-grid">
            <div class="about-text">
                <span class="label-eyebrow">{{ pages.home.about.eyebrow }}</span>
                <h2 class="section-heading">{{ pages.home.about.heading }}</h2>
                {{ pages.home.about.body | safe | replace('\n\n', '</p><p class="body-text">') | replace('\n', '<br>') | safe }}
            </div>
            <div class="about-image-wrapper">
                <img src="{{ pages.home.about.image }}" alt="{{ player.name }} portrait" class="about-image">
            </div>
        </div>
    </div>
</section>

{# What You'll Find Here Tiles #}
<section class="section-tiles">
    <div class="container">
        <h2 class="section-heading-centered">What You'll Find Here</h2>
        <div class="tiles-grid">
            {% for tile in pages.home.tiles %}
            <div class="tile-card">
                <h3 class="tile-title">{{ tile.title }}</h3>
                <p class="tile-body">{{ tile.body }}</p>
                <a href="{{ tile.linkUrl }}" class="tile-cta">{{ tile.linkText }}</a>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

{# Recent Updates Section #}
<section class="section-updates">
    <div class="container">
        <h2 class="section-heading-centered">Recent Updates</h2>
        <div class="updates-list">
            {% set recentUpdates = collections.updates | reverse | limit(3) %}
            {% for post in recentUpdates %}
            <div class="update-card">
                {% if post.data.coverImage %}
                <img src="{{ post.data.coverImage }}" alt="{{ post.data.title }}" class="update-card-image">
                {% endif %}
                <div class="update-card-content">
                    <span class="update-card-type">{{ post.data.type }}</span>
                    <h3 class="update-card-title">{{ post.data.title }}</h3>
                    <time class="update-card-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
                    <p class="update-card-summary">{{ post.data.summary }}</p>
                    <a href="{{ post.url }}" class="update-card-link">Read more â†’</a>
                </div>
            </div>
            {% endfor %}
        </div>
        <div class="text-center" style="margin-top: 2rem;">
            <a href="/updates/" class="btn-secondary">View All Updates</a>
        </div>
    </div>
</section>
