---
layout: base.njk
title: {{ pages.contact.title }}
description: Get in touch with Kevin Franz Jr. for recruiting inquiries, academic questions, or general information.
permalink: /contact/
---

<section class="section-page-header">
    <div class="container">
        <div class="page-header-centered">
            <span class="label-eyebrow">{{ pages.contact.title }}</span>
            <h1>{{ pages.contact.heading }}</h1>
            <p class="hero-subheadline">{{ pages.contact.subheading }}</p>
        </div>
    </div>
</section>

<section class="section-content">
    <div class="container">
        <div class="contact-layout">
            <div class="contact-form-wrapper">
                <h2>Send a Message</h2>
                <form name="contact" method="POST" data-netlify="true" netlify-honeypot="bot-field">
                    <input type="hidden" name="form-name" value="contact">
                    <p class="hidden">
                        <label>Don't fill this out if you're human: <input name="bot-field"></label>
                    </p>

                    <div class="form-group">
                        <label for="name">Name *</label>
                        <input type="text" id="name" name="name" required>
                    </div>

                    <div class="form-group">
                        <label for="email">Email *</label>
                        <input type="email" id="email" name="email" required>
                    </div>

                    <div class="form-group">
                        <label for="subject">Subject *</label>
                        <select id="subject" name="subject" required>
                            <option value="">Select a subject</option>
                            <option value="recruiting">Recruiting Inquiry</option>
                            <option value="academic">Academic Question</option>
                            <option value="general">General Question</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="message">Message *</label>
                        <textarea id="message" name="message" rows="6" required></textarea>
                    </div>

                    <button type="submit" class="btn-primary">Send Message</button>
                </form>
            </div>

            <div class="contact-info">
                {% if pages.contact.quickLinks.length > 0 %}
                <h2>Quick Links</h2>
                <ul class="contact-links">
                    {% for link in pages.contact.quickLinks %}
                    <li><a href="{{ link.url }}" {% if 'http' in link.url %}target="_blank"{% endif %}>{{ link.text }}</a></li>
                    {% endfor %}
                </ul>
                {% endif %}

                {% if pages.contact.coaches.length > 0 %}
                <h3>Coach Contacts</h3>
                {% for coach in pages.contact.coaches %}
                <div class="coach-contact">
                    <p><strong>{{ coach.title }}</strong></p>
                    <p>{{ coach.name }}<br>
                    <a href="mailto:{{ coach.email }}">{{ coach.email }}</a></p>
                </div>
                {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
</section>
